<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/gradient">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:id="@+id/imageView"
        android:src="@drawable/blue_bus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Spinner
        android:id="@+id/bus_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/drop"/>
    <Spinner
        android:id="@+id/stop_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/drop"/>
    <EditText
        android:id="@+id/time_selector"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#003D79"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/edit_boundary"
        android:text="Choose a time"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:editable="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule"
        android:background="@drawable/orangeliine"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#336666" />
    <ListView
        android:id="@+id/stop_info_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layoutAnimation="@anim/list_anim_layout"/>
</LinearLayout>