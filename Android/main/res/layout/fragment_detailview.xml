<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/back">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:id="@+id/imageView9"
        android:layout_marginTop="0dp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uase Id :"
        android:id="@+id/textView6"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurassic Park"
        android:id="@+id/textView7"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textIsSelectable="true"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textIsSelectable="true"
        android:id="@+id/textView9"
        android:textSize="45px"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/textView8" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brief Description :"
        android:textIsSelectable="true"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam Neill, Laura Dern, Jeff Goldblum"
        android:id="@+id/textView11"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating :"
        android:id="@+id/textView12"
        android:textSize="45px"
        android:textIsSelectable="true"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.5"
        android:id="@+id/textView13"
        android:textSize="45px"
        android:textIsSelectable="true"
        android:layout_below="@+id/imageView9"
        android:layout_toEndOf="@+id/textView12" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:rating="2.25"
        android:isIndicator="true"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location :"
        android:id="@+id/textView14"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="45px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam Neill, Laura Dern, Jeff Goldblum"
        android:id="@+id/textView15"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView14"
        android:layout_toEndOf="@+id/imageView9"
        android:textSize="35px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:id="@+id/textView16"
        android:textIsSelectable="true"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:textSize="45px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="During a preview tour, a theme park suffers a major power breakdown that allows its cloned dinosaur exhibits to run amok."
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:text="Wanna leave feedback"
        android:id="@+id/textView3"
        android:background="#ffd9fff8"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_toEndOf="@+id/ratingBar" />


</RelativeLayout>