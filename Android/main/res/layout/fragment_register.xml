<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.apple.lab5.SampleFragment"
    android:background="#ffffffff">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Relativelayout">


        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView"
            android:src="@drawable/icon"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Create your SUBUS Account"
            android:textColor="#ffff1318"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:textSize="25dp"
            android:layout_below="@id/imageView"
            android:clickable="false"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/Name"
            android:textColor="#ff000000"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="First"
            android:textSize="20dp"
            android:layout_below="@id/Name"
            android:id="@+id/First"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:text="Last"
            android:textSize="20dp"
            android:id="@+id/Last"
            android:layout_above="@+id/UserName"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@id/First"
            android:layout_marginTop="5dp"
            android:text="Choose your username"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/UserName"
            android:textColor="#ff000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:layout_below="@id/UserName"
            android:id="@+id/username1"/>
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@id/username1"
            android:layout_marginTop="5dp"
            android:text="Create a password"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/Password"
            android:textColor="#ff000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:layout_below="@id/Password"
            android:id="@+id/password1"/>
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@id/password1"
            android:layout_marginTop="5dp"
            android:text="Confirm your a password"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/Confirm"
            android:textColor="#ff000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:layout_below="@id/Confirm"
            android:id="@+id/confirm1"/>
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@id/confirm1"
            android:layout_marginTop="5dp"
            android:text="Your age"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/Age"
            android:textColor="#ff000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:layout_below="@id/Age"
            android:id="@+id/age1"/>
        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@id/age1"
            android:layout_marginTop="5dp"
            android:text="Gender"
            android:gravity="left|center"
            android:textSize="22dp"
            android:id="@+id/Gender"
            android:textColor="#ff000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:layout_below="@id/Gender"
            android:id="@+id/gender1"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="submit"
            android:gravity="center"
            android:layout_below="@id/gender1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:background="#ffff8b09"/>
    </RelativeLayout>

</ScrollView>
