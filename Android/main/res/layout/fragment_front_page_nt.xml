<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/porsche1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FrontPage$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


    <Button
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Task3"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:background="#d744de25"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Task4"
        android:id="@+id/button2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button"
        android:background="#ffffffff"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Task5"
        android:id="@+id/button4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2"
        android:background="#dcdb302d"
       />




    </LinearLayout>

    <TextView
        android:layout_width="240dp"
        android:layout_height="105dp"
        android:text=""

        android:id="@+id/DateInf"
        android:layout_gravity="center"
        android:layout_marginTop="421dp"
        android:gravity="center"
        android:textColor="#ffff6c4c"
        android:layout_marginLeft="50dp"
        />
</RelativeLayout>
