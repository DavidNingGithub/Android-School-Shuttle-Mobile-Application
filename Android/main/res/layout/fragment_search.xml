<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/boundary"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/search_switch"
            android:src="@drawable/exchange"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/search_start"
            android:layout_toRightOf="@+id/search_switch"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/simple_boundary"
            android:layout_marginTop="10dp"
            android:text="  Starting Point">
        </EditText>

        <EditText
            android:id="@+id/search_end"
            android:layout_toRightOf="@+id/search_switch"
            android:layout_below="@+id/search_start"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/simple_boundary"
            android:text="  Your Home Address">
        </EditText>

        <ImageView
            android:id="@+id/search_go"
            android:src="@drawable/go"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/search_start"
            android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_home"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/school"
            android:layout_marginLeft="85dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/simple_boundary"
            android:text="      Recently Used:"
            android:textSize="18dp"
            android:gravity="center_vertical"/>



        </LinearLayout>


</LinearLayout>