<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="380dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:id="@+id/front_logo"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"/>


            <ImageView
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:id="@+id/front_bus"
            android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
            android:layout_weight="100"/>

    </RelativeLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/home_page_login"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boundary"
        android:layout_weight="1"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:textColor="#FBFBFF" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#272727"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Find a bus"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/home_find_bus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/image_gallery"/>
    </LinearLayout>


</LinearLayout>