<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.apple.lab5.SampleFragment"
    android:background="@drawable/porsche1">
    <!--android:background="@drawable/loginback1">-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Relativelayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/Relativelayout3"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="#dcdb302d">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text=""
                android:hint="Enter your ID"
                android:textSize="12dp"
                android:id="@+id/ID"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="#d744de25"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text=""
                android:hint="Enter your password"
                android:textSize="12dp"
                android:password="true"
                android:id="@+id/Password"
                android:layout_below="@+id/ID"
                android:layout_alignParentStart="true"
                android:background="#ffffffff"/>


            <Button
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:text="Log On"
                android:background="#71000000"
                android:id="@+id/button2"
                android:layout_below="@+id/Password"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Not a Member? Register"
            android:layout_below="@+id/Relativelayout3"
            android:textColor="#ed1841fa"
            android:layout_alignStart="@+id/Relativelayout3"
            android:id="@+id/textView18" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:src="@drawable/front_logo"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#ffff9211"
            android:id="@+id/button"
            android:layout_below="@+id/textView18" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/button5"
            android:layout_below="@+id/imageView"
            android:layout_toEndOf="@+id/button" />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/button6"
            android:layout_below="@+id/imageView"
            android:layout_toEndOf="@+id/button" />

    </RelativeLayout>

</RelativeLayout>